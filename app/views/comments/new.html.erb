
<% if @question %>
  <h1>Comment on '<%=@question.title%>' </h1>

  <div class="row">
    <div class="span6 offset3">
      <%= form_for [@question, Comment.new] do |f| %>
        <%= f.label :content %>
        <%= f.text_field :content %>
        <%= f.submit "Post my Comment", class: "btn btn-large btn-primary" %>
      <% end %>
    </div>
  </div>

<% elsif @answer %>
  <h1>Comment on '<%=@answer.content%>' </h1>

  <div class="row">
    <div class="span6 offset3">
      <%= form_for [@answer, Comment.new] do |f| %>
        <%= f.label :content %>
        <%= f.text_field :content %>
        <%= f.submit "Post my Comment", class: "btn btn-large btn-primary" %>
      <% end %>
    </div>
  </div>
<% end %>
